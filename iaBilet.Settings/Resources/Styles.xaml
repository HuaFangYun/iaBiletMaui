<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="StackLayout" x:Key="SettingsFormRow">
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="Orientation" Value="Vertical"></Setter>
        <Setter Property="Spacing" Value="10"></Setter>
    </Style>
    <Style TargetType="Label" x:Key="SettingsFormLabel">
        <Setter Property="FontSize" Value="Body"></Setter>
        <Setter Property="FontAttributes" Value="Bold"></Setter>
        <Setter Property="VerticalOptions" Value="Center"></Setter>
        <Setter Property="HorizontalOptions" Value="Start"></Setter>
    </Style>
    <Style TargetType="Entry" x:Key="SettingsFormEntry">
        <Setter Property="VerticalOptions" Value="Center"></Setter>
        <Setter Property="MinimumWidthRequest" Value="300"></Setter>
    </Style>
    <Style TargetType="Picker" x:Key="SettingsFormPicker">
        <Setter Property="VerticalOptions" Value="Center"></Setter>
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="WidthRequest" Value="300"></Setter>
    </Style>
</ResourceDictionary>