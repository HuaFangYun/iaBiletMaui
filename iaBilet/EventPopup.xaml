<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" 
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:iaBilet.Views.Controls" x:Class="iaBilet.EventPopup" Color="Transparent">
    <Grid Style="{StaticResource Container}" x:Name="MainContainer"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Scale="0" Opacity="0">
        <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="50">
            <Border Style="{StaticResource Shadow}" />
            <local:Event HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="50"></local:Event>
        </Grid>
    </Grid>
</toolkit:Popup>